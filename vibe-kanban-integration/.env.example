# Vibe-Kanban Integration Environment Variables
# Copy this file to .env and configure the values

# === Server Configuration ===
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# === MCP Server Integration ===
MCP_SERVER_URL=http://mcp-server:8080
MCP_SERVER_PORT=8080

# === GitHub Integration ===
# Create a GitHub Personal Access Token with repo permissions
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# === Vibe-Kanban Configuration ===
VIBE_KANBAN_MODE=safe
VIBE_KANBAN_PORT=3001

# === AI Agent Settings ===
# Limit concurrent AI agents to prevent resource exhaustion
AI_AGENT_CONCURRENCY_LIMIT=3
AUTO_ASSIGN_TASKS=true
CLAUDE_CODE_INTEGRATION=true

# === Security Settings ===
ALLOWED_ORIGINS=http://localhost:3001,http://192.168.111.200:3001,http://192.168.111.200
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# === Database Configuration (if needed) ===
# DATABASE_URL=sqlite:///app/data/vibe-kanban.db
# DATABASE_TYPE=sqlite

# === Task Categories (comma-separated) ===
TASK_CATEGORIES=refactoring,testing,documentation,bug-fixes,feature-development

# === Safe Mode Settings ===
# These settings enforce the "safe" approach from the analysis report
REQUIRE_HUMAN_REVIEW=true
AUTO_MERGE_THRESHOLD=0
CRITICAL_PATH_PROTECTION=true
ENTERPRISE_MODE=true

# === Monitoring and Observability ===
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=15s

# === Development Settings (for development environment) ===
# NODE_ENV=development
# LOG_LEVEL=debug
# AUTO_RELOAD=true